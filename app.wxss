@import 'assets/weui.wxss';
@import 'assets/zanui.wxss';

/* 基础样式 */

view, scroll-view, swiper, swiper-item, icon, text, progress, button,
checkbox-group, checkbox, form, input, label, picker, radio-group, radio, slider,
switch, action-sheet, action-sheet-item, action-sheet-cancel, modal, toast,
loading, navigator, audio, image, video, map, canvas {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

page {
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  min-height: 100vh;
}

.page {
  min-height: 100vh;
  padding-bottom: 120rpx;
  background: #f8f8f8 url(https://wx.youthol.cn/static/images/wx_bg_sdutlib.png) no-repeat;
  background-size: 100%;
  background-position: 0px 100%;
}

.page__hd {
  margin: 0;
  padding: 40px;
}

.page__bd {
  padding-bottom: 30rpx;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  position: relative;
  padding: 36rpx 0 10rpx;
  text-align: left;
  font-size: 50rpx;
  font-weight: 500;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

/* 自定义折叠面板样式 */

.collapse-content {
  overflow: hidden;
}

.collapse-item {
  width: 100%;
  padding: 10rpx 20rpx;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.collapse__hd {
  width: 100%;
  line-height: 2em;
  color: #333;
  font-size: 16px;
}

.collapse__bd {
  padding-left: 0;
  color: #999;
  font-size: 12px;
}

.collapse-arrow-up {
  padding-right: 13px;
  position: relative;
}

.collapse-arrow-down {
  padding-right: 13px;
  position: relative;
}

.collapse-arrow-up::after {
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  -webkit-transform: matrix(0.71, -.71, 0.71, 0.71, 0, 0);
  transform: matrix(0.71, -.71, 0.71, 0.71, 0, 0);
  top: -2px;
  position: absolute;
  top: 50%;
  margin-top: -4px;
  right: 2px;
}

.collapse-arrow-down::after {
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  -webkit-transform: matrix(-.71, 0.71, -.71, -.71, 0, 0);
  transform: matrix(-.71, 0.71, -.71, -.71, 0, 0);
  top: -2px;
  position: absolute;
  top: 50%;
  margin-top: -4px;
  right: 2px;
}

/* collapse with zanui */

.arrow-up .zan-cell__ft, .arrow-down .zan-cell__ft {
  padding-right: 50rpx;
}

.arrow-up .zan-cell__ft::after {
  position: absolute;
  top: 50%;
  right: 2px;
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8c8;
  border-style: solid;
  transform: translateY(-50%) matrix(0.71, -.71, 0.71, 0.71, 0, 0);
}

.arrow-down .zan-cell__ft::after {
  position: absolute;
  top: 50%;
  right: 2px;
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8c8;
  border-style: solid;
  transform: translateY(-50%) matrix(-.71, 0.71, -.71, -.71, 0, 0);
}
